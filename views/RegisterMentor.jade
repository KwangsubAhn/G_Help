    script(type='text/javascript').
      function register(){
      var name = $('#username').val(),
      password = $('#password').val();
      var data = { "uname": name, upwd:password};
      $.ajax({
      url:'/register',
      type:'POST',
      data:data,
      success:function(data,status){
      if(status == 'success'){
      location.href='login';
      }
      },
      error:function(data,err){
      location.href='register';
      }
      });
      }
