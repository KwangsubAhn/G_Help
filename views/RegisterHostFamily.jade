doctype html
html
  head
    title Register HostFamily - GHelp
    meta(charset='utf-8')
    link(href='/stylesheets/bootstrap.min.css', rel='stylesheet', media='screen')
    script(src='/javascripts/jquery-2.1.1.min.js', type='text/javascript')
    script(src='/javascripts/bootstrap.min.js', type='text/javascript')
    style(type='text/css').
      .panel-body{
      padding: 30px 50px 0 50px;
      }
      .form-group{
      margin-bottom: 35px;
      }
      .panel-title{
      font-size: 24px;
      font-weight: bold;
      }
    script(type='text/javascript').
      function register(){
      var name = $('#username').val(),
      password = $('#password').val();
      var data = { "uname": name, upwd:password};
      $.ajax({
      url:'/register',
      type:'POST',
      data:data,
      success:function(data,status){
      if(status == 'success'){
      location.href='login';
      }
      },
      error:function(data,err){
      location.href='register';
      }
      });
      }
  body
    .container.web-body(style='margin-top:100px;width: 980px;')
      .row
        .col-lg-6.col-lg-offset-3
          .panel.panel-default
            .panel-heading(style='height: 50px;')
              .panel-title(style='text-align: left') Register HostFamily
            .panel-body
              form.form-horizontal(action='#', role='form', method='post')
                .form-group
                  input#HostFamilyName.form-control(type='text', name='HostFamilyName', placeholder='HostFamilyName')
                .form-group
                  input#Address.form-control(type='text', name='Address', placeholder='Address')
                .form-group
                  input#PhoneNum.form-control(type='text', name='PhoneNum', placeholder='Phone Num')
                .form-group
                  input.btn.btn-success.btn-block(type='button', onclick='', value='Register As A HostFamily')
